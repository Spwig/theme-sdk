{
  "name": "Image with Text",
  "description": "Display an image alongside text content with flexible layouts",
  "tag": "image-with-text",
  "settings": [
    {
      "type": "image",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story",
      "translatable": true
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Share the story behind your brand. Tell customers about your values, how you source your products, or what makes your business unique.",
      "translatable": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More",
      "translatable": true
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/pages/about"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "image_width",
      "label": "Image Width",
      "options": [
        { "value": "small", "label": "Small (33%)" },
        { "value": "medium", "label": "Medium (50%)" },
        { "value": "large", "label": "Large (66%)" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Image",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Image with Text"
    }
  ]
}
