{
  "name": "@spwig/theme-validator",
  "version": "1.0.0",
  "type": "module",
  "description": "Spwig Theme validation library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r schemas dist/",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "spwig",
    "theme",
    "validator",
    "validation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/spwig/theme-sdk.git",
    "directory": "packages/validator"
  },
  "author": "Spwig",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
