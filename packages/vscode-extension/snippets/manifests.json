{
  "Theme Manifest": {
    "prefix": "spwig-manifest",
    "body": [
      "{",
      "  \"name\": \"${1:my-theme}\",",
      "  \"version\": \"${2:1.0.0}\",",
      "  \"display_name\": \"${3:My Theme}\",",
      "  \"description\": \"${4:A custom theme for Spwig}\",",
      "  \"author\": \"${5:Your Name}\",",
      "  \"sdk_version\": \"2.0\",",
      "  \"min_platform_version\": \"${6:2.0.0}\",",
      "  \"license\": \"${7|MIT,Apache-2.0,GPL-3.0,Proprietary|}\",",
      "  \"preview_image\": \"preview.png\",",
      "  \"tags\": [\"${8:modern}\", \"${9:responsive}\"],",
      "  \"categories\": [\"${10|fashion,electronics,home-garden,sports,beauty,food-beverage,books,toys,jewelry,automotive,general|}\"],",
      "  \"features\": [",
      "    \"${11:Responsive design}\",",
      "    \"${12:Dark mode support}\"",
      "  ]",
      "}"
    ],
    "description": "Complete theme manifest file (SDK v2.0)"
  },
  "Header Preset": {
    "prefix": "spwig-header-preset",
    "body": [
      "{",
      "  \"name\": \"${1:default-header}\",",
      "  \"display_name\": \"${2:Default Header}\",",
      "  \"description\": \"${3:A clean default header layout}\",",
      "  \"layout\": {",
      "    \"style\": \"${4|standard,centered,split,minimal|}\",",
      "    \"sticky\": ${5|true,false|},",
      "    \"transparent\": ${6|false,true|}",
      "  },",
      "  \"widgets\": {",
      "    \"left\": [\"${7:logo}\", \"${8:menu}\"],",
      "    \"center\": [],",
      "    \"right\": [\"${9:search}\", \"${10:account}\", \"${11:cart}\"]",
      "  }",
      "}"
    ],
    "description": "Header preset configuration"
  },
  "Footer Preset": {
    "prefix": "spwig-footer-preset",
    "body": [
      "{",
      "  \"name\": \"${1:default-footer}\",",
      "  \"display_name\": \"${2:Default Footer}\",",
      "  \"description\": \"${3:A standard footer layout}\",",
      "  \"layout\": {",
      "    \"style\": \"${4|standard,centered,minimal,mega|}\",",
      "    \"columns\": ${5:4}",
      "  },",
      "  \"widgets\": {",
      "    \"columns\": [",
      "      [\"${6:logo}\", \"${7:text}\"],",
      "      [\"${8:links}\"],",
      "      [\"${9:links}\"],",
      "      [\"${10:newsletter}\", \"${11:social}\"]",
      "    ],",
      "    \"bottom\": [\"${12:text}\", \"${13:payment}\"]",
      "  }",
      "}"
    ],
    "description": "Footer preset configuration"
  }
}
