{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spwig Footer Preset",
  "description": "Footer layout preset for Spwig v2.0 themes. Defines zone structure and widget placements for a footer configuration.",
  "type": "object",
  "required": ["name", "layout_type", "widget_placements"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Display name for this footer preset"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief description of the footer layout"
    },
    "layout_type": {
      "type": "string",
      "enum": ["standard", "centered", "minimal"],
      "description": "Footer layout variant"
    },
    "zone_layouts": {
      "type": "object",
      "description": "Defines which zones are active and their position slots.",
      "properties": {
        "main-footer": {
          "type": "array",
          "items": { "type": "string", "enum": ["left", "center", "right", "full"] },
          "description": "Primary footer zone (links, newsletter, about)"
        },
        "bottom-bar": {
          "type": "array",
          "items": { "type": "string", "enum": ["left", "center", "right", "full"] },
          "description": "Bottom bar zone (copyright, social icons, legal links)"
        }
      },
      "additionalProperties": false
    },
    "widget_placements": {
      "type": "array",
      "description": "Array of widget placement definitions.",
      "items": {
        "type": "object",
        "required": ["widget_type", "zone"],
        "properties": {
          "widget_type": {
            "type": "string",
            "enum": [
              "logo", "menu", "search", "cart", "account", "currency", "language",
              "social", "newsletter", "contact", "text", "links", "payment",
              "trust_badges", "announcement", "loyalty_balance", "loyalty_tier_badge",
              "site_variable", "custom"
            ],
            "description": "Type of footer widget"
          },
          "zone": {
            "type": "string",
            "pattern": "^(main-footer|bottom-bar)_(left|center|right|full)$",
            "description": "Target zone and position in format: zone-name_position (e.g., main-footer_left)"
          },
          "order": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Display order within the zone position (lower = first)"
          },
          "config": {
            "type": "object",
            "description": "Widget-specific configuration (e.g., link title, content text)",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
