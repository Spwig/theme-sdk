{
  "name": "Back to Top",
  "description": "Floating button to scroll back to the top of the page",
  "tag": "back-to-top",
  "settings": [
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        { "value": "bottom-right", "label": "Bottom Right" },
        { "value": "bottom-left", "label": "Bottom Left" }
      ],
      "default": "bottom-right"
    },
    {
      "type": "range",
      "id": "show_after",
      "label": "Show After Scroll (px)",
      "min": 100,
      "max": 1000,
      "step": 50,
      "default": 300
    },
    {
      "type": "select",
      "id": "style",
      "label": "Button Style",
      "options": [
        { "value": "circle", "label": "Circle" },
        { "value": "rounded", "label": "Rounded" },
        { "value": "square", "label": "Square" }
      ],
      "default": "circle"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#2563eb"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_progress",
      "label": "Show Scroll Progress",
      "default": false
    },
    {
      "type": "text",
      "id": "aria_label",
      "label": "Accessibility Label",
      "default": "Back to top",
      "translatable": true
    }
  ]
}
