{
  "For Loop": {
    "prefix": "spwig-for",
    "body": [
      "{% for ${1:item} in ${2:items} %}",
      "  $0",
      "{% empty %}",
      "  <p>No items found.</p>",
      "{% endfor %}"
    ],
    "description": "Django for loop with empty"
  },
  "If Statement": {
    "prefix": "spwig-if",
    "body": [
      "{% if ${1:condition} %}",
      "  $0",
      "{% endif %}"
    ],
    "description": "Django if statement"
  },
  "If-Else Statement": {
    "prefix": "spwig-ifelse",
    "body": [
      "{% if ${1:condition} %}",
      "  $2",
      "{% else %}",
      "  $0",
      "{% endif %}"
    ],
    "description": "Django if-else statement"
  },
  "Include Template": {
    "prefix": "spwig-include",
    "body": [
      "{% include \"${1:template.html}\" with ${2:variable}=${3:value} %}"
    ],
    "description": "Include template with context"
  },
  "Block Definition": {
    "prefix": "spwig-block",
    "body": [
      "{% block ${1:name} %}",
      "  $0",
      "{% endblock %}"
    ],
    "description": "Django template block"
  }
}
