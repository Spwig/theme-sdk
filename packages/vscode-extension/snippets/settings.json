{
  "Text Setting": {
    "prefix": "spwig-setting-text",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"text\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"default\": \"${3:default value}\"",
      "}"
    ],
    "description": "Text input setting"
  },
  "Textarea Setting": {
    "prefix": "spwig-setting-textarea",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"textarea\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"default\": \"${3:default value}\",",
      "  \"info\": \"${4:Help text}\"",
      "}"
    ],
    "description": "Textarea setting"
  },
  "Checkbox Setting": {
    "prefix": "spwig-setting-checkbox",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"checkbox\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"default\": ${3|true,false|},",
      "  \"info\": \"${4:Help text}\"",
      "}"
    ],
    "description": "Checkbox setting"
  },
  "Select Setting": {
    "prefix": "spwig-setting-select",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"select\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"options\": [",
      "    { \"value\": \"${3:option1}\", \"label\": \"${4:Option 1}\" },",
      "    { \"value\": \"${5:option2}\", \"label\": \"${6:Option 2}\" }",
      "  ],",
      "  \"default\": \"${3}\"",
      "}"
    ],
    "description": "Select dropdown setting"
  },
  "Color Setting": {
    "prefix": "spwig-setting-color",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"color\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"default\": \"${3:#ffffff}\"",
      "}"
    ],
    "description": "Color picker setting"
  },
  "Image Setting": {
    "prefix": "spwig-setting-image",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"image\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"info\": \"${3:Recommended size: 1200x600px}\"",
      "}"
    ],
    "description": "Image upload setting"
  },
  "Range Setting": {
    "prefix": "spwig-setting-range",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"range\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"min\": ${3:0},",
      "  \"max\": ${4:100},",
      "  \"step\": ${5:1},",
      "  \"default\": ${6:50},",
      "  \"unit\": \"${7:px}\"",
      "}"
    ],
    "description": "Range slider setting"
  },
  "URL Setting": {
    "prefix": "spwig-setting-url",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"url\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"default\": \"${3:/}\",",
      "  \"info\": \"${4:Enter a URL}\"",
      "}"
    ],
    "description": "URL input setting"
  },
  "Number Setting": {
    "prefix": "spwig-setting-number",
    "body": [
      "{",
      "  \"id\": \"${1:setting_id}\",",
      "  \"type\": \"number\",",
      "  \"label\": \"${2:Setting Label}\",",
      "  \"min\": ${3:0},",
      "  \"max\": ${4:100},",
      "  \"default\": ${5:0}",
      "}"
    ],
    "description": "Number input setting"
  },
  "Complete Settings Schema": {
    "prefix": "spwig-schema",
    "body": [
      "{",
      "  \"settings\": [",
      "    {",
      "      \"id\": \"${1:title}\",",
      "      \"type\": \"text\",",
      "      \"label\": \"${2:Title}\",",
      "      \"default\": \"${3:Default Title}\"",
      "    },",
      "    {",
      "      \"id\": \"${4:background_color}\",",
      "      \"type\": \"color\",",
      "      \"label\": \"${5:Background Color}\",",
      "      \"default\": \"${6:#ffffff}\"",
      "    }",
      "  ]",
      "}"
    ],
    "description": "Complete component settings schema"
  }
}
