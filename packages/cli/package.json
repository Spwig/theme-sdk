{
  "name": "@spwig/theme-cli",
  "version": "1.2.0",
  "type": "module",
  "description": "Spwig Theme SDK CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "spwig": "./dist/cli.js"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js && npm run copy-assets",
    "copy-assets": "cp -r src/templates dist/ && cp -r schemas dist/",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "spwig",
    "theme",
    "cli",
    "ecommerce"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/spwig/theme-sdk.git",
    "directory": "packages/cli"
  },
  "author": "Spwig",
  "license": "Apache-2.0",
  "dependencies": {
    "@spwig/theme-validator": "^1.0.0",
    "archiver": "^6.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "open": "^9.1.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
