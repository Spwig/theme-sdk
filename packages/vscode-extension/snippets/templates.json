{
  "Product Card": {
    "prefix": "spwig-product-card",
    "body": [
      "<div class=\"product-card\">",
      "  <a href=\"{{ ${1:product}.url }}\" class=\"product-link\">",
      "    {% if ${1}.image %}",
      "      <img src=\"{{ ${1}.image }}\" alt=\"{{ ${1}.title }}\" class=\"product-image\" loading=\"lazy\">",
      "    {% endif %}",
      "    <div class=\"product-details\">",
      "      <h3 class=\"product-title\">{{ ${1}.title }}</h3>",
      "      <div class=\"product-price\">",
      "        {% if ${1}.compare_at_price %}",
      "          <span class=\"compare-price\">{{ ${1}.compare_at_price|currency }}</span>",
      "        {% endif %}",
      "        <span class=\"current-price\">{{ ${1}.price|currency }}</span>",
      "      </div>",
      "    </div>",
      "  </a>",
      "</div>"
    ],
    "description": "Product card template"
  },
  "Product Grid": {
    "prefix": "spwig-product-grid",
    "body": [
      "<div class=\"product-grid\">",
      "  {% for product in ${1:products} %}",
      "    <div class=\"product-card\">",
      "      <a href=\"{{ product.url }}\">",
      "        {% if product.image %}",
      "          <img src=\"{{ product.image }}\" alt=\"{{ product.title }}\" loading=\"lazy\">",
      "        {% endif %}",
      "        <h3>{{ product.title }}</h3>",
      "        <p>{{ product.price|currency }}</p>",
      "      </a>",
      "    </div>",
      "  {% empty %}",
      "    <p>No products found.</p>",
      "  {% endfor %}",
      "</div>"
    ],
    "description": "Product grid with loop"
  },
  "Hero Section": {
    "prefix": "spwig-hero",
    "body": [
      "<section class=\"hero-section\" style=\"background-color: {{ settings.background_color }};\">",
      "  <div class=\"container\">",
      "    <div class=\"hero-content\">",
      "      <h1 class=\"hero-title\">{{ settings.${1:title} }}</h1>",
      "      <p class=\"hero-description\">{{ settings.${2:description} }}</p>",
      "      {% if settings.show_button %}",
      "        <a href=\"{{ settings.button_url }}\" class=\"hero-button\">",
      "          {{ settings.button_text }}",
      "        </a>",
      "      {% endif %}",
      "    </div>",
      "  </div>",
      "</section>"
    ],
    "description": "Hero section template"
  },
  "Header Component": {
    "prefix": "spwig-header",
    "body": [
      "<header class=\"site-header\">",
      "  <div class=\"container\">",
      "    <div class=\"header-content\">",
      "      <!-- Logo -->",
      "      <div class=\"header-logo\">",
      "        {% if store.logo %}",
      "          <a href=\"/\">",
      "            <img src=\"{{ store.logo }}\" alt=\"{{ store.name }}\">",
      "          </a>",
      "        {% else %}",
      "          <a href=\"/\" class=\"logo-text\">{{ store.name }}</a>",
      "        {% endif %}",
      "      </div>",
      "",
      "      <!-- Navigation -->",
      "      <nav class=\"main-nav\">",
      "        {% for item in navigation.main_menu %}",
      "          <a href=\"{{ item.url }}\">{{ item.title }}</a>",
      "        {% endfor %}",
      "      </nav>",
      "",
      "      <!-- Cart -->",
      "      <a href=\"/cart\" class=\"cart-link\">",
      "        Cart ({{ cart.item_count }})",
      "      </a>",
      "    </div>",
      "  </div>",
      "</header>"
    ],
    "description": "Site header template"
  },
  "Footer Component": {
    "prefix": "spwig-footer",
    "body": [
      "<footer class=\"site-footer\">",
      "  <div class=\"container\">",
      "    <div class=\"footer-content\">",
      "      <!-- Links -->",
      "      <div class=\"footer-section\">",
      "        <h3>Quick Links</h3>",
      "        <nav>",
      "          {% for item in navigation.footer_menu %}",
      "            <a href=\"{{ item.url }}\">{{ item.title }}</a>",
      "          {% endfor %}",
      "        </nav>",
      "      </div>",
      "",
      "      <!-- Contact -->",
      "      <div class=\"footer-section\">",
      "        <h3>Contact</h3>",
      "        {% if store.email %}",
      "          <p>{{ store.email }}</p>",
      "        {% endif %}",
      "      </div>",
      "",
      "      <!-- Copyright -->",
      "      <div class=\"footer-bottom\">",
      "        <p>&copy; {% now \"Y\" %} {{ store.name }}</p>",
      "      </div>",
      "    </div>",
      "  </div>",
      "</footer>"
    ],
    "description": "Site footer template"
  },
  "For Loop": {
    "prefix": "spwig-for",
    "body": [
      "{% for ${1:item} in ${2:items} %}",
      "  $0",
      "{% empty %}",
      "  <p>No items found.</p>",
      "{% endfor %}"
    ],
    "description": "Django for loop with empty"
  },
  "If Statement": {
    "prefix": "spwig-if",
    "body": [
      "{% if ${1:condition} %}",
      "  $0",
      "{% endif %}"
    ],
    "description": "Django if statement"
  },
  "If-Else Statement": {
    "prefix": "spwig-ifelse",
    "body": [
      "{% if ${1:condition} %}",
      "  $2",
      "{% else %}",
      "  $0",
      "{% endif %}"
    ],
    "description": "Django if-else statement"
  },
  "Include Template": {
    "prefix": "spwig-include",
    "body": [
      "{% include \"${1:template.html}\" with ${2:variable}=${3:value} %}"
    ],
    "description": "Include template with context"
  },
  "Block Definition": {
    "prefix": "spwig-block",
    "body": [
      "{% block ${1:name} %}",
      "  $0",
      "{% endblock %}"
    ],
    "description": "Django template block"
  },
  "CTA Section": {
    "prefix": "spwig-cta",
    "body": [
      "<section class=\"cta-section\">",
      "  <div class=\"container\">",
      "    <h2>{{ settings.${1:heading} }}</h2>",
      "    <p>{{ settings.${2:subheading} }}</p>",
      "    <a href=\"{{ settings.button_url }}\" class=\"cta-button\">",
      "      {{ settings.button_text }}",
      "    </a>",
      "  </div>",
      "</section>"
    ],
    "description": "Call-to-action section"
  },
  "Feature Grid": {
    "prefix": "spwig-feature-grid",
    "body": [
      "<section class=\"feature-grid\">",
      "  <div class=\"container\">",
      "    <h2>{{ settings.${1:heading} }}</h2>",
      "    <div class=\"features\">",
      "      {% for feature in settings.features %}",
      "        <div class=\"feature-item\">",
      "          {% if feature.icon %}",
      "            <img src=\"{{ feature.icon }}\" alt=\"\">",
      "          {% endif %}",
      "          <h3>{{ feature.title }}</h3>",
      "          <p>{{ feature.description }}</p>",
      "        </div>",
      "      {% endfor %}",
      "    </div>",
      "  </div>",
      "</section>"
    ],
    "description": "Feature grid section"
  }
}
